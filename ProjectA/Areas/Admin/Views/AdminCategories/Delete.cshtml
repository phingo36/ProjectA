@model ProjectA.Models.Category

@{
    ViewData["Title"] = "Xác nhận xóa danh mục:" + Model.CatName;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="fa fa-house"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminCategories" asp-action="Index">Danh sách danh mục</a>
            <span class="breadcrumb-item active">Thông tin danh mục: @Model.CatName</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin danh mục muốn xóa: @Model.CatName</h4>
        <div class="table-responsive">
            <form asp-action="Delete" asp-action="Delete" asp-route-id="@Model.CatId">
                <table class="table table-striped">
                    <input type="hidden" asp-for="CatId" />
                    <tr>
                        <td>Tên danh mục</td>
                        <td class="text-dark font-weight-semibold">@Model.CatName</td>
                    </tr>
                    <tr>
                        <td>Mô tả</td>
                        <td class="text-dark font-weight-semibold">@Model.Description</td>
                    </tr>
                    <tr>
                        <td>Published</td>
                        <td class="text-dark font-weight-semibold">@Model.Published</td>
                    </tr>
                    <tr>
                        <td>Tựa đề</td>
                        <td class="text-dark font-weight-semibold">@Model.Title</td>
                    </tr>
                    <tr>
                        <td>Ảnh đại diện</td>
                        <td class="text-dark font-weight-semibold"><img width="200" height="200" src="~/images/categories/@Model.Thumbnail" alt="@Model.Title" /></td>
                    </tr>
                    <tr>
                        <td>Ordering</td>
                        <td class="text-dark font-weight-semibold">@Model.Ordering</td>
                    </tr>
                    <tr>
                        <td>Xác nhận xóa</td>
                        <td>
                            <input type="submit" value="Delete" class="btn btn-danger" /> 
                        </td>
                        <td>
                            <a asp-action="Index">Back to List</a>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</div>

