@model ProjectA.Models.Role

@{
    ViewData["Title"] = "Xác nhận xóa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Basic Info</h4>
        <div class="table-responsive">
            <table class="table table-striped">
                <tr>
                    <td>ID:</td>
                    <td class="text-dark font-weight-semibold">@Model.RoleId</td>
                </tr>
                <tr>
                    <td>Tên người truy cập</td>
                    <td class="text-dark font-weight-semibold">@Model.RoleName</td>
                </tr>
                <tr>
                    <td>Mô tả</td>
                    <td class="text-dark font-weight-semibold">@Model.Description</td>
                </tr>
                <tr>
                    <td>Xác nhận xóa: </td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@Model.RoleId">
                            <input type="hidden" asp-for="RoleId" />
                            <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
                        </form>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>